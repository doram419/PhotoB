<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
	PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-config.dtd">
	
<configuration>
	<!-- 별칭 등록 -->
	<typeAliases>
		<typeAlias 
			type="himedia.photobook.repositories.vo.UsersVo"
			alias="UsersVo" />
		<typeAlias 
			type="himedia.photobook.repositories.vo.OrdersVo"
			alias="OrdersVo" />
		<typeAlias 
			type="himedia.photobook.repositories.vo.AlbumVo"
			alias="AlbumVo" />
		<typeAlias 
			type="himedia.photobook.repositories.vo.ShipmentsVo"
			alias="ShipmentsVo" />
	</typeAliases>
	
	<!-- MyBatis 매퍼 -->
	<mappers> 
		<mapper resource="mybatis/mappers/users.xml" />
		<mapper resource="mybatis/mappers/orders.xml" />
		<mapper resource="mybatis/mappers/album.xml" />
		<mapper resource="mybatis/mappers/shipments.xml" />
	</mappers>
</configuration>