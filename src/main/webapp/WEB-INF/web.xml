<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd" id="WebApp_ID" version="6.0">
  <display-name>Photobook_team4</display-name>
 <welcome-file-list>
  <welcome-file>/WEB-INF/views/index/index.jsp</welcome-file>
</welcome-file-list>
  
  <!-- 서블릿 생성 -->
  <servlet>
  	<servlet-name>spring</servlet-name>
  	<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
  	<!-- 멀티파트 설정 -->
  	<multipart-config>
  		<location>c:\\uploads-temp</location><!-- 임시 디렉터리 -->
  		<max-file-size>10485760</max-file-size><!-- 개별 업로드 파일의 최대 크기 : 10MB -->
  		<max-request-size>20971520</max-request-size><!-- 전체 요청의 최대 크기 : 20MB -->
  		<file-size-threshold>10485760</file-size-threshold><!-- 업로드를 위한 메모리 사이즈 -->
  	</multipart-config>
  </servlet>
  
  <!-- 서블릿 매핑 -->
  <servlet-mapping>
  	<servlet-name>spring</servlet-name>
  	<url-pattern>/</url-pattern>
  </servlet-mapping>
  
   <!-- Context Loader Listener 등록 -->
  <listener>
  	<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  
  <!-- Listener 설정 정보 -->
  <context-param>
  	<param-name>contextConfigLocation</param-name>
  	<param-value>/WEB-INF/applicationContext.xml</param-value>
  </context-param>
</web-app>